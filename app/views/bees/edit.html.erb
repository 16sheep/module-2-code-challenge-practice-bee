<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h1>Edit bee</h1>

<%= form_for @bee  do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :queen, "Is Queen?" %>
  <%= f.check_box :queen %>
  <%= f.label :hive, "hive" %>
  <%= f.collection_select :hive_id, @hives, :id, :name %>
  <%= f.submit %>
<% end %>
